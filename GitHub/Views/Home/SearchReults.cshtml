@model  GitHub.Dto.GitHubUserModel

@{
    ViewBag.Title = "Search Results";
}

<div class="row">
    <div class="col-md-10 col-sm-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">Results</div>
            <div class="panel-body">
                <div class="col-sm-2">
                    <img src="@Model.Avatar_Url" style="Height: 90px"/>
                </div>
                <div class="col-sm-10">
                    <span class="textLarge">@Model.Name</span><br/>
                    <label>Location:</label> @Model.Location<br/>
                    <label>Username:</label> @Model.Login<br/>
                </div>

                <div class="clearfix"></div>
                <hr/>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped table-condensed">
                            <thead>
                            <tr>
                                <th>Repository Name </th>
                                <th>Stagazer Count</th>
                                <th>Url</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var repo in @Model.Repos)
                            {
                                <tr>
                                    <td>@repo.Name</td>
                                    <td>@repo.Stargazers_Count</td>
                                    <td> @repo.Html_Url </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model BennettsBiking.Models.UserModel

@{
    ViewBag.Title = "Home Page";
}

@if (Model.Id == null)
{
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", placeholder = "DD MMM YYYY" })
                        @Html.ValidationMessageFor(model => model.DateOfBirth)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        @Html.LabelFor(m => m.Id, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(m => m.Id)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(m => m.FirstName)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(m => m.LastName)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(m => m.DateOfBirth)
        </div>
    </div>
}
